                    }
                }
            }
        },
        "/api/chats/{chatId}/messages": {
            "post": {
                "tags": [
                    "Chat"
                ],
                "summary": "Enviar uma nova mensagem no chat",
                "operationId": "67988f08fb54547c6faac490ef29e8ef",
                "parameters": [
                    {
                        "name": "chatId",
                        "in": "path",
                        "description": "ID do chat",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "message"
                                ],
                                "properties": {
                                    "message": {
                                        "type": "string",
                                        "example": "Olá, como você está?"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Mensagem enviada com sucesso",
