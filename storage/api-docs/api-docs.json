        "/chat/{chatId}": {
            "get": {
                "tags": [
                    "Chat"
                ],
                "summary": "Exibe mensagens de um chat específico",
                "operationId": "3328b9424c4ef0b14c1b989536275a26",
                "parameters": [
                    {
                        "name": "chatId",
                        "in": "path",
                        "description": "ID do chat",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de mensagens do chat",
